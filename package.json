{
    "name": "frontend-module-template",
    "version": "0.0.1",
    "description": "Frontend UI and Module System Template",
    "scripts": {
        "browser-sync": "browser-sync start --config bs-config.js",
        "build": "npm-run-all clean --parallel css js",
        "clean": "del assets/dist",
        "css": "npm-run-all css-compile css-prefix css-minify",
        "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 assets/src/scss/ -o assets/dist/css/",
        "css-lint": "npm-run-all --continue-on-error --parallel css-lint-*",
        "css-lint-stylelint": "stylelint \"**/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache",
        "css-lint-vars": "fusv assets/src/scss/",
        "css-minify": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output assets/dist/css/styles.min.css assets/dist/css/styles.css",
        "css-prefix": "npm-run-all --parallel css-prefix-*",
        "css-prefix-main": "postcss --config build/postcss.config.js --replace \"assets/dist/css/*.css\" \"!assets/dist/css/*.min.css\"",
        "js": "npm-run-all js-compile",
        "js-compile": "npm-run-all --parallel js-compile-*",
        "js-compile-standalone": "rollup --environment BUNDLE:false --config build/rollup.config.js --sourcemap",
        "js-compile-standalone-esm": "rollup --environment ESM:true,BUNDLE:false --config build/rollup.config.js --sourcemap",
        "js-compile-bundle": "rollup --environment BUNDLE:true --config build/rollup.config.js --sourcemap",
        "serve": "npm-run-all --parallel browser-sync watch",
        "unit-test": "mocha",
        "watch": "npm-run-all --parallel watch-*",
        "watch-css-main": "nodemon --watch assets/src/scss/ --ext scss --exec \"npm-run-all css-lint css-compile css-prefix\"",
        "watch-js-main": "nodemon --watch assets/src/js --ext js --exec \"npm-run-all js-lint js-compile\"",
        "watch-unit-test": "mocha --watch"
    },
    "author": "Adam Pengh",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": ""
    },
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.11.0",
        "@babel/preset-env": "^7.11.0",
        "@babel/register": "^7.10.5",
        "@rollup/plugin-babel": "^5.1.0",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "autoprefixer": "^9.8.6",
        "browser-sync": "^2.26.12",
        "chai": "^4.2.0",
        "clean-css-cli": "^4.3.0",
        "del-cli": "^3.0.1",
        "find-unused-sass-variables": "^2.0.0",
        "jquery": "^3.5.1",
        "mocha": "^8.1.1",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^7.1.1",
        "rollup": "^2.23.0",
        "stylelint": "^13.6.1",
        "stylelint-scss": "^3.18.0"
    },
    "file": [
        "assets/dist/{css,js}/*.{css,js,map}",
        "assets/src/js/**/*.{js,map}",
        "assets/scss/**/*.scss"
    ],
    "style": "assets/dist/css/styles.css",
    "sass": "assets/src/scss/styles.scss",
    "main": "assets/dist/script.js",
    "module": "assets/dist/script.esm.js"
}
